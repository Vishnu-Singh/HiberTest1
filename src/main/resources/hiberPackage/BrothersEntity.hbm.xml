<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hiberPackage.BrothersEntity" table="brothers" schema="test">
        <property name="name">
            <column name="Name" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="location">
            <column name="Location" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="dob">
            <column name="DOB" sql-type="date" not-null="true"/>
        </property>
        <property name="contactNumber">
            <column name="Contact_Number" sql-type="decimal(10)" precision="10" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>